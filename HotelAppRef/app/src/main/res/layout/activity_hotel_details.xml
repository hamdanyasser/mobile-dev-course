<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".HotelDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hotel Image -->
        <ImageView
            android:id="@+id/hotelDetailImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:contentDescription="Hotel Image"
            android:src="@mipmap/ic_launcher"
            android:background="@color/design_default_color_primary_dark"/>

        <!-- Hotel Name -->
        <TextView
            android:id="@+id/hotelDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel Name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:textColor="#333333"
            android:elevation="2dp"/>

        <!-- Phone Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ž Phone"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#555555"/>

                <TextView
                    android:id="@+id/phoneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+961 1 123456"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/phoneButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call Now"
                    android:layout_marginTop="12dp"
                    android:textAllCaps="false"
                    android:drawableLeft="@android:drawable/ic_menu_call"
                    android:drawablePadding="8dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Website Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ Website"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#555555"/>

                <TextView
                    android:id="@+id/websiteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.hotel.com"
                    android:textSize="16sp"
                    android:textColor="#2196F3"
                    android:layout_marginTop="8dp"
                    android:autoLink="web"/>

                <Button
                    android:id="@+id/websiteButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visit Website"
                    android:layout_marginTop="12dp"
                    android:textAllCaps="false"
                    android:drawableLeft="@android:drawable/ic_menu_view"
                    android:drawablePadding="8dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Location Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Location"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#555555"/>

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location Address"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/locationButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Open in Maps"
                    android:layout_marginTop="12dp"
                    android:textAllCaps="false"
                    android:drawableLeft="@android:drawable/ic_menu_mylocation"
                    android:drawablePadding="8dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Nearby Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—ºï¸ Nearby Attractions"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#555555"/>

                <TextView
                    android:id="@+id/nearbyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nearby places"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="2dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Food Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ½ï¸ Dining Options"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#555555"/>

                <TextView
                    android:id="@+id/foodText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food options"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="2dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
